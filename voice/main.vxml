<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">
<form id="main">
    <field name="lang">
        <prompt>
        For English, press 1.<break/>
        Pour le fran√ßais, appuyez sur 2.
        </prompt>
        <grammar root="supported-languages" mode="dtmf">
            <rule id="supported-languages">
                <one-of>
                    <item>1</item>
                    <item>2</item>
                </one-of>
            </rule>
        </grammar>
        <noinput>
            <reprompt/>
        </noinput>
        <nomatch>
            <reprompt/>
        </nomatch>
    </field>
    <filled namelist="lang" mode="all">
        <prompt>
            You select <value expr="lang"/>
        </prompt>
    </filled>
</form>
</vxml>